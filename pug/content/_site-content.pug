section.b-page-new
    .container
        .row
            .col-lg-8.offset-lg-2
                +heading('SẢN PHẨM MỚI','./images/title-dark.png')
        .row
            -var listCard = [{img:'./images/rudu-1.jpg',title:'RƯỢU VANG ĐÀ LẠT',sale:'Sale',price:'370.000',price_old:'450.00',icon:'sale'},{img:'./images/rudu-1.jpg',title:'RƯỢU VANG ĐÀ LẠT',sale:'Sale',price:'370.000',price_old:'450.00',icon:'new'},{img:'./images/rudu-1.jpg',title:'RƯỢU VANG ĐÀ LẠT',sale:'Sale',price:'370.000',price_old:'450.00',icon:'hot'},{img:'./images/rudu-1.jpg',title:'RƯỢU VANG ĐÀ LẠT',sale:'Sale',price:'370.000',price_old:'450.00'}]
            each item in listCard
                .col-lg-3
                    .b-card.wow.bounceInUp(data-wow-delay=".5s" data-wow-duration="1s")
                        .b-image
                            -var img = item.img
                            img(src=img, alt="Rudu")
                        .b-content
                            h3.b-text-title #{item.title}
                            h5.b-text-price #{item.price} #[sup đ] #[h5.b-text-price-old #{item.price_old} #[sup đ]]
                        if (item.icon === 'sale')
                            .b-sale
                                h3.b-text-title #{item.sale}
                        else if (item.icon =='new')
                            .b-new
                                h3.b-text-title #{item.sale}
                        else if (item.icon =='hot')
                            .b-hot
                                h3.b-text-title #{item.sale}
                        .b-favorite
                            .row
                                .col-lg-6.col-md-6.col-sm-6
                                    .item
                                        p.b-text-norm #[i.fas.fa-heart] Yêu Thích
